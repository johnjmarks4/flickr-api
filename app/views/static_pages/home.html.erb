<div id="top_pane">

  <h1>Flickr</h1>

  <div class="border", id="left_border">
    <% (1..10).each do |x|%>
      <% if x % 2 == 0 %>
        <div class="right"></div>
      <% else %>
        <div></div>
      <% end %>
    <% end %>
  </div>

  <div class="border", id="right_border">
    <% (1..10).each do |x|%>
      <% if x % 2 == 0 %>
        <div class="right"></div>
      <% else %>
        <div></div>
      <% end %>
    <% end %>
  </div>

  <!-- <div id="logo_container">
    <div id="logo"></div>
  </div> -->

  <!-- <div id="name">
    <p>Type your Flickr</p>
    <p>username below</p>
  </div> -->

  <%= content_tag :div, id: "search_bar" do %>
    <%= form_tag url: "/static_pages/home", method: "get" do %>
      <%= text_field_tag :id, "Type your Flickr username here", onfocus: "if (this.value == 'Type your Flickr username here') {this.value=''}" %>
      <%= content_tag :div, id: "buttons" do %>
        <%= submit_tag "Submit" %>
      <% end %>
    <% end %>
  <% end %>

</div>

<div id="bottom_pane">

  <% if !@pictures.empty? %>
    <% @pictures.each_with_index do |pic, i| %>
      <%= link_to(content_tag(:div, '', class: "img", style: "background-image:url('#{pic}');"), @links[i]) %>
    <% end %>
  <% end %>

</div>